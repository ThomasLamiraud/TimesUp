<h2 class="mt-3">Create a new Timesup Game</h2>

<%= render partial: 'layouts/flash_errors'%>

<%= form_for @game, url: games_path, method: :post do |f| %>
  <%= f.hidden_field :user_id %>

  <div class="form-group">
    <%=f.label :name%>
    <%= f.text_field :name, class: "form-control", placeholder: "Enter name" %>
  </div>

  <div class="form-group">
    <%=f.label :player_count%>
    <%= f.text_field :player_count, class: "form-control", placeholder: "Enter number of players" %>
  </div>

  <div class="form-group">
    <%=f.label :word_count%>
    <%= f.text_field :word_count, class: "form-control", placeholder: "Enter amount of word that each players needs to create" %>
  </div>

  <%= f.submit "Create", class: "btn btn-primary" %>
<% end %>
