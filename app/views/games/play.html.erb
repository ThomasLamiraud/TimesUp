<div class="row">
  <div class="col">
    <div class="text-center mb-3 mt-3">
      <h3><%= @game.name %></h3>
      <p>Round : <%= @game.display_round %></p>

      <div class="row js-timer-sentence">
        <div class="col-3">
          <h3 class="js-timer-display" data-timer-value="<%= Game::TIMER_VALUES[@game.round.to_sym] %>"></h3>
        </div>

        <div class="col-9">
          <button type="button" class="btn btn-secondary js-timer-btn js-timer-restart">Restart</button>
          <button type="button" class="btn btn-secondary js-timer-btn js-timer-pause">Pause</button>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col text-center">
        <h4 data-available-words="<%= @game.words.available.pluck(:word).shuffle %>">current word : <span class="current-word"> </span></h4>

        <div class="js-score-area">
          <p>Words found : <span class="js-score" data-score="0">0</span> / <span class="js-max-score"><%= @game.words.available.count %> </span></p>
        </div>

        <div class="row">
          <div class="col-12 col-md-6 mb-5">
            <div class="row">
              <div class="col">
                <button type="button" class="btn btn-success js-success-word btn-lg">Success</button>
              </div>

              <div class="col">
                <button type="button" class="btn btn-secondary js-next-word btn-lg" data-current-index="0">Pass</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
